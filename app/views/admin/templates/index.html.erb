<p id="notice"><%= notice %></p>

<h1>Templates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.title %></td>
        <td><%= template.content %></td>
        <td><%= link_to 'Show', [:admin, template] %></td>
        <td><%= link_to 'Edit', edit_admin_template_path(template) %></td>
        <td><%= link_to 'Destroy', [:admin, template], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_admin_template_path %>
